body{
    background: #fff;
    margin: 0;
}

@media only screen {

    /*  ==========================================================================
        Header
        ========================================================================== */
        .header{
            width: 100%;
            height: auto;
            padding: 10px 0;
            display: block;
            background-color: #00446c;
            position: fixed;
            top: 0;
        }

        .logo{
            margin: 0 0 20px;
            padding: 0;
            display: block;
            width: 100%;
            float: left;
            text-align: center;
        }

        .logo a{
            margin-left: 20px;
        }

        .share-buttons{
            width: 100%;
            padding: 0;
            margin: 0;
            text-align: center;
            list-style: none;
            display: block;
            float: right;
        }

        .share-buttons li{
            display: inline-block;
            vertical-align: top;
            width: 100px;
            text-align: left;
            margin-top: 5px;
        }

        .share-buttons .gplus{
            width: 75px;
        }

        .share-buttons .facebook{
            width: 180px;
        }



    /*  ==========================================================================
        Main
        ========================================================================== */
        .main{
            text-align: center;
            margin-top: 80px;
            width: 100%;
            display: block;
        }

        .main img{
            width: 100%;
        }

        .back-link{
            font-size: 14px;
            line-height: 14px;
            color: #00446c;
            margin-bottom: 40px;
            font-family: arial;
        }

        .back-link a{
            color: #00446c;
        }

        .back-link a:hover{
            text-decoration: none;
        }

    /*  ==========================================================================
        Footer
        ========================================================================== */
        .footer{
            padding: 40px 0;
        }

        .share-embed{
            width: 400px;
            margin: 0 auto;
        }

        .share-embed p{
            font-size: 16px;
            line-height: 16px;
            font-weight: bold;
            font-family: arial;
            color: #00446c;
            text-align: center;
        }

        .share-embed textarea{
            padding: 10px;
            border: 1px solid #ccc;
            color: #666;
            width: 94%;
        }

        .share-embed input{
            border: 1px solid #ccc;
            height: 15px;
            padding: 5px;
            margin: 0;
            text-align: right;
            width: 50px;
            color: #444;
        }

        .share-embed input:hover,
        .share-embed input:focus{
            background-color: #f1f1f1;
            border:1px solid #00446c;
        }

        .share-embed .btn{
            border: 1px solid #ccc;
            background-color: #eee;
            color: #444;
            font-size: 12px;
            line-height: 12px;
            height: 28px;
            margin-left: 20px;
            cursor: pointer;
        }

        .share-embed .btn:hover,
        .share-embed .btn:focus{
            background-color: #ccc;
        }

        .embed-option{
            margin-bottom: 10px;
        }

        .embed-option .label{
            color: #555;
            font-family: "Arial";
            font-size: 12px;
        }

        .embed-option{
            text-align: left;
        }

}


    /*
     * CSS for devices with resolution bigger than breakpoint
     */

    @media only screen and (min-width: 768px) {
        .header{
            height: 30px;
        }

        .logo,
        .logo a,
        .logo img{
            display: block;
        }

        .logo{
            margin: 0;
            width: 30%;
            text-align: left;
        }

        .share-buttons{
            width: 70%;
            text-align: right;
        }

        .share-buttons li:last-child{
            margin-right: 20px;
        }

        .main img{
            width: auto;
        }

    }

